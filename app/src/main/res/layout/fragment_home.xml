<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:id="@+id/tvHeader"
            android:textStyle="bold"
            android:textSize="51dp"
            android:text="DokterHalo"/>

        <TextView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="viewStart"
            android:paddingTop="10dp"
            android:id="@+id/tv_3"
            android:text="DokterHalo merupakan sebuah perusahaan teknologi asal Indonesia yang melayani di bidang telekonsultasi kesehatan.  Melalui DokterHalo, orang dapat berbicara dengan dokter spesialis, membeli obat, serta melakukan pemeriksaan laboratorium lewat smartphone kapan saja, dimana saja selama 24 jam."/>

        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Pertemuan"
            />



    </LinearLayout>

</FrameLayout>