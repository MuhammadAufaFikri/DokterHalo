<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Dokter"
        android:textSize="30dp"
        android:textAlignment="center"
        />
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/iv_DokterImage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama       :"
            android:layout_weight="2.3"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:textSize="20dp"
            android:text="tes"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STR          :"
            android:layout_weight="2.3"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvSTR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:textSize="20dp"
            android:text="tes"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spesialis :"
            android:layout_weight="2.3"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvSpesailis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:textSize="20dp"
            android:text="tes"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="panggil"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/btnPanggil"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="buat janji"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:id="@+id/btn_buatJanjididetail"
            />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit"
        android:id="@+id/btntoEdit"
        />
</LinearLayout>